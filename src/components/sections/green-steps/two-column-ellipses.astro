---
import QuickData from "../../../data/quick-fixes.json";
---

<section class="cs-container">
  <div class="sm:flex flex-row sm:py-20">
    <div class="column">
      <h2 class="cs-title">growing market</h2>
    </div>
    <div class="grid-container">
      <div class="left mb-8"></div>
      <div class="sm:flex flex-col gap-8">
        <div class="sm:flex gap-4 mb-8 sm:mb-0">
          <div class="update-card mb-8 lg:mb-0">
            <div class="card-text flex flex-row gap-4">
              <div class="circle">
                <div class="flex flex-col">
                  <p class="text-5xl">73%</p>
                  <p class="font-normal">
                    Choose sustainability-focused accommodations
                  </p>
                </div>
              </div>
            </div>
          </div>
          <div class="update-card">
            <div class="card-text flex flex-row gap-4">
              <div class="circle">
                <div class="flex flex-col">
                  <p class="text-5xl">7.2%</p>
                  <p class="font-normal">
                    Projected annual growth in sustainable tourism
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="sm:flex gap-4 mb-8 sm:mb-0">
          <div class="update-card">
            <div class="card-text flex flex-row gap-4 mb-8 sm:mb-0">
              <div class="circle">
                <div class="flex flex-col">
                  <p class="text-5xl">66%</p>
                  <p class="font-normal">
                    Travelers prefer regenerative travel
                  </p>
                </div>
              </div>
            </div>
          </div>
          <div class="update-card">
            <div class="card-text flex flex-row gap-4">
              <div class="circle">
                <div class="flex flex-col">
                  <p class="text-5xl">69%</p>
                  <p class="font-normal">
                    Prioritize spending to aid communities
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @media only screen and (min-width: 0rem) {
    .cs-title {
      max-width: 80rem;
    }
    .grid-container {
      display: grid;
    }
  }
  @media only screen and (min-width: 48rem) {
    .cs-title {
      font-size: 2rem;
    }
    .grid-container {
      grid-template-columns: 1fr 3fr;
      gap: 7.5rem;
    }
    .update-card {
      display: flex;
      flex-direction: row;
      justify-content: flex-start;
      align-items: center;
      gap: 20px;
    }
  }
  .circle {
    width: 300px; /* Adjust size */
    height: 300px; /* Same as width for a perfect circle */
    color: rgb(0, 0, 0); /* Text color */
    display: flex;
    justify-content: center; /* Centers text horizontally */
    align-items: center; /* Centers text vertically */
    border-radius: 50%; /* Makes it a circle */
    text-align: center; /* Aligns text */
    font-size: 16px; /* Adjust font size */
    font-weight: bold; /* Optional: Bold text */
    border: 1px solid black;
  }
</style>
